<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/receipt_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/receipt_item_category"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/category_1"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="42dp"/>

        <TextView
            android:id="@+id/receipt_item_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:focusableInTouchMode="false"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="3"/>
        <TextView
            android:id="@+id/receipt_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="22dp"
            android:textSize="15dp"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="자두"/>

    </LinearLayout>
    <View
        android:id="@+id/receipt_item_view"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@drawable/dotted_line"
        android:layerType="software" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/receipt_item_constrain"
        android:visibility="visible">

        <Button
            android:id="@+id/receipt_item_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="확인"
            android:textColor="#ffff"
            android:background="@drawable/button_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receipt_item_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>