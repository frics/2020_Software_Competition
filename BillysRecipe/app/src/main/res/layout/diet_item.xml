<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/diet_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/diet_item_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_sunrise"/>
        <TextView
            android:id="@+id/diet_item_mealtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="아침"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/diet_item_photo"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintTop_toBottomOf="@+id/diet_item_layout"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/diet_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="칼륨 듬뿍 고구마죽"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/diet_item_photo"
        app:layout_constraintTop_toBottomOf="@+id/diet_item_layout"/>
    <TextView
        android:id="@+id/diet_item_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="350kcal"
        app:layout_constraintLeft_toRightOf="@+id/diet_item_photo"
        app:layout_constraintTop_toBottomOf="@+id/diet_item_name"/>
    <View
        android:id="@+id/diet_item_view"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#5A5A5A"
        app:layout_constraintTop_toBottomOf="@+id/diet_item_photo"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>