<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="카테고리명"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/category_image"
        app:layout_constraintLeft_toRightOf="@id/category_image"
        app:layout_constraintTop_toTopOf="@id/category_image" />

    <ImageView
        android:id="@+id/fold_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/minus_button"
        app:layout_constraintBottom_toBottomOf="@id/category_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/category_name" />

    <kr.ac.ssu.billysrecipe.recipe.SettingGridView
        android:id="@+id/category_gridView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:verticalSpacing="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_name" />

    <View
        android:layout_width="0dp"
        android:layout_height="1.2dp"
        android:layout_marginTop="20dp"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="@id/category_image"
        app:layout_constraintRight_toRightOf="@id/fold_button"
        app:layout_constraintTop_toBottomOf="@id/category_gridView" />

</androidx.constraintlayout.widget.ConstraintLayout>