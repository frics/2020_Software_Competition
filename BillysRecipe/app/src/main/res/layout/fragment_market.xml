<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diet_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/diet_view2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#5A5A5A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_week" />

    <TextView
        android:id="@+id/diet_total_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:textSize="12dp"
        android:text="953 kcal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diet_view2" />

    <ProgressBar
        android:id="@+id/diet_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_design"
        app:layout_constraintLeft_toRightOf="@id/diet_total_kcal"
        app:layout_constraintTop_toBottomOf="@id/diet_view2" />

    <TextView
        android:id="@+id/diet_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:text="47% (1인 하루 권장량 기준)"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diet_view2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diet_list"
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>