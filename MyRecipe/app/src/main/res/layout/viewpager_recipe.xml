<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/viewpager_food_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/viewpager_scrap_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_grey_heart_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewpager_scrap_num"
        android:layout_width="34dp"
        android:layout_height="13dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/design_scrap_num"
        android:gravity="center|center_vertical"
        android:text="1.1k"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/viewpager_scrap_button"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toLeftOf="@id/viewpager_scrap_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewpager_scrap_button" />

    <kr.ac.ssu.myrecipe.UI.TextBorderEffect
        xmlns:textoutline="http://schemas.android.com/apk/res/kr.ac.ssu.myrecipe"
        android:id="@+id/viewpager_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/viewpager_food_image"
        app:layout_constraintLeft_toLeftOf="parent"
        textoutline:textStroke="true"
        textoutline:textStrokeColor="@color/grey"
        textoutline:textStrokeWidth="3.0" />

</androidx.constraintlayout.widget.ConstraintLayout>