<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:id="@+id/refri_view1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#5A5A5A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/refri_recycler_horizon"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/refri_recycler_horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/refri_view1" />

    <View
        android:id="@+id/refri_view2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#5A5A5A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refri_recycler_horizon" />

    <ImageView
        android:id="@+id/refri_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:gravity="center"
        android:text="재료가 없어요"
        android:textSize="30dp"
        android:visibility="gone"
        android:src="@drawable/empty_refigerator"
        app:layout_constraintBottom_toTopOf="@id/refri_recycler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refri_view2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/refri_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refri_view2" />
</androidx.constraintlayout.widget.ConstraintLayout>