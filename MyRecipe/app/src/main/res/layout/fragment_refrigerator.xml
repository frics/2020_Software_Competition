<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/refri_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/refri_search"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sharp_search_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/refri_title"
        app:layout_constraintRight_toLeftOf="@+id/refri_add"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/refri_add"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sharp_add_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/refri_title"
        app:layout_constraintLeft_toRightOf="@+id/refri_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/refri_recycler"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/refri_add" />
</androidx.constraintlayout.widget.ConstraintLayout>