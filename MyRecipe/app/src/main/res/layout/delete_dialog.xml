<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <TextView
            android:id="@+id/delete_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="상세정보"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/delete_dialog_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_clear_24"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/delete_dialog_view"
            android:layout_width="wrap_content"
            android:layout_height="0.6dp"
            android:layout_marginTop="20dp"
            android:background="@color/textGrey"
            app:layout_constraintTop_toBottomOf="@id/delete_dialog_title"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/delete_dialog_layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/delete_dialog_view">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:text="카테고리"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/delete_dialog_category"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:text="카테고리"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/delete_dialog_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/delete_dialog_layout0">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:text="태그"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/delete_dialog_tag"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:text="태그"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/delete_dialog_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/delete_dialog_layout1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:text="재료명"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/delete_dialog_material"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="재료"/>
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/button_background"
            android:id="@+id/delete_dialog_okay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/delete_dialog_layout2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
