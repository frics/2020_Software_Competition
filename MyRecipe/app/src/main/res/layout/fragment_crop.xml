<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".Camera.Crop.CropFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/crop_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTint"
        android:paddingVertical="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/crop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="영수증 스캔"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="25dp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/left_tint"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/colorTint"
        app:layout_constraintTop_toBottomOf="@id/crop_toolbar"
        app:layout_constraintBottom_toTopOf="@id/crop_btn_view"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/right_tint"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/colorTint"
        app:layout_constraintTop_toBottomOf="@id/crop_toolbar"
        app:layout_constraintBottom_toTopOf="@id/crop_btn_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal" />


    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/crop_btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTint"
        android:paddingVertical="35dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/recapture_btn"
            android:text="다시 찍기"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/crop_btn"
            android:text="사진 사용"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
