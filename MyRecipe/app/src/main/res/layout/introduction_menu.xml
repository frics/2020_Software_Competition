<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_edge_up"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredients_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="재료"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recipe_title"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ingredients_bar"
        android:layout_width="60dp"
        android:layout_height="1.5dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/ingredients_title"
        app:layout_constraintRight_toRightOf="@id/ingredients_title"
        app:layout_constraintTop_toBottomOf="@id/ingredients_title" />

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="레시피"
        android:textColor="@color/grey"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recipe_bar"
        android:layout_width="80dp"
        android:layout_height="1.5dp"
        android:background="@color/black"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/recipe_title"
        app:layout_constraintRight_toRightOf="@id/recipe_title"
        app:layout_constraintTop_toBottomOf="@id/recipe_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
